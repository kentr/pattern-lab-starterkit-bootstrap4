{% macro input(name, type, classes, label, placeholder, value, size, required) %}
    {% set show_label = label is not same as(false) %}
    <div class="form-group {{ classes }}">
        {% if show_label %}
            <label class="{{ classes }}">{{ label|default(name|title) }}{% if required %}<abbr title="Required">*</abbr>{% endif %}
        {% endif %}
        <input class="form-control" type="{{ type|default('text') }}" name="{{ name }}" placeholder="{{ placeholder|default(name|title) }}" value="{{ value|e }}" size="{{ size|default(20) }}"{% if required %} required{% endif %} />
        {% if show_label %}</label>{% endif %}
    </div>
{% endmacro %}

{% macro textarea(label, placeholder, rows, classes) %}
    {% set show_label = label is not same as(false) %}
    <div class="form-group {{ classes }}">
        {% if show_label %}
            <label for="exampleFormControlTextarea" class="{{ classes }}">{{ label|default(name|title) }}{% if required %}<abbr title="Required">*</abbr></label>{% endif %}
        {% endif %}
        <textarea class="form-control" id="exampleFormControlTextarea" placeholder="{{ placeholder|default(name|title) }}" rows="{{ rows|default(3) }}"{% if required %} required{% endif %}></textarea>
    </div>
{% endmacro %}
