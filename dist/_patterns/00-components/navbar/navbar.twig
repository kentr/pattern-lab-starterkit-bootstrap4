{% embed '@bootstrap/navbar/navbar.twig' with {
  color: 'light',
  utility_classes: ['bg-light'],
} %}

  {% block branding %}
    <a class="navbar-brand w-25 p-0 mr-0 mr-lg-2" href="{{ url }}">
    {% include "@components/image/logo.twig" with {utility_classes: []} %}
    </a>
  {% endblock %}

  {% block left %}
      <div class="mr-auto">
        {% include "@bootstrap/nav/nav.twig" with {
          items: nav_items,
          utility_classes: ['navbar-nav']
        } %}
      </div>
  {% endblock %}

{% endembed %}
