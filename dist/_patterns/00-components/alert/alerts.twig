{% for color in colorCodes %}
  {% embed "@_bootstrap/alert/alert.twig" with {
    "type": color,
    "content": "This is a dismissable #{ color } alert."
  } %}
  {% endembed %}
{% endfor %}

{% set color = "danger" %}
{% embed "@_bootstrap/alert/alert.twig" with {
  "type": color,
  "heading": "#{ color|capitalize }!",
  "content": "This is a #{ color } alert with a heading."
} %}
{% endembed %}
