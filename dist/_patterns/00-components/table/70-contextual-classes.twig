{# See https://getbootstrap.com/docs/4.3/content/tables/#contextual-classes #}

{% set colorCodes = ["active"]|merge(colorCodes) %}
<table class="table">
  <!-- On rows -->
  <thead>
    <tr>
      <th scope="col">Class</th>
      <th scope="col">Scope</th>
    </tr>
  </thead>
  <tbody>
  {% for color in colorCodes %}
    <tr class="table-{{ color }}"><th>{{ color|title }}</th><td>Row</td></tr>
  {% endfor %}
  </tbody>
</table>

<table class="table">
  <!-- On cells -->

  <thead>
    <tr>
      <th>Class</th>
    {% for color in colorCodes %}
      <th class="table-{{ color }}">{{ color|title }}</th>
    {% endfor %}
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Scope</th>
    {% for color in colorCodes %}
      <td class="table-{{ color }}">Cell</td>
    {% endfor %}
    </tr>
  </tbody>
</table>

