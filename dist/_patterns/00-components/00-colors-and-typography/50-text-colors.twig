{#
  Add Bootstrap extra text colors.
  See https://getbootstrap.com/docs/4.3/utilities/colors/
#}
{% set textColors = colorCodes|merge([
  'black-50',
  'body',
  'muted',
  'white',
  'white-50',
])|reduce(
    (unique, item) => item in unique ? unique : unique|merge([item]), []
) %}

{% for color in textColors %}
  <p class="text-{{ color }}{{ color in textBgDark|default([]) ? ' bg-dark' : '' }}">.text-{{ color }}</p>
{% endfor %}
