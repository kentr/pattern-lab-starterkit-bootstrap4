{#
  Simple stacked form.
  See https://getbootstrap.com/docs/4.3/components/forms/
 #}
<form>

  <div class="form-group">
    {{ forms.input('Email', 'email') }}
  </div>

  <div class="form-group">
    {{ forms.input('Password', 'password') }}
  </div>

  <div class="form-group">
    {% include '@components/form/checkbox.twig' %}
  </div>

  {% include "@_bootstrap/button/button.twig" with {
    html_tag: "input",
    type: "primary",
    attributes: attributes
      .setAttribute("type", "submit")
      .setAttribute("value", "Submit")
  } %}
</form>
